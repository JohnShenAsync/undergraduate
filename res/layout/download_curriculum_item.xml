<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:duplicateParentState="true" 
	android:paddingLeft="0dip"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:minHeight="40dip">
	 <LinearLayout android:duplicateParentState="true" android:gravity="center_vertical" android:paddingLeft="10dip" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/item_title" style="@style/content_page_large_text" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/item_subTitle" android:visibility="visible" style="@style/content_page_small_text" />
    </LinearLayout>
	 <ImageView
        android:id="@+id/item_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
		android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dip"
        android:indeterminateOnly="true"/>
		
</RelativeLayout>