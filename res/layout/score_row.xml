        android:layout_weight="1" />

    <TextView
        android:id="@+id/cemester_index"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
-->
    <TextView
        android:id="@+id/score_point"
        android:layout_width="20dip"
         android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/score"
        android:layout_width="30dip"
         android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>